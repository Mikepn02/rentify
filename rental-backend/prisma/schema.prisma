generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(cuid())
  firstName   String
  lastName    String
  email       String     @unique
  phoneNumber String?
  password    String?
  googleId    String?
  role        Role
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  properties  Property[]
  bookings    Booking[]
}

model Property {
  id          String    @id @default(cuid())
  title       String
  description String
  hostId      String
  host        User      @relation(fields: [hostId], references: [id])
  price       Float
  rating      Float     @default(0.0)
  reviewCount Int       @default(0)
  type        String
  bedrooms    Int
  bathrooms   Int
  area        Float
  location    String
  amenities   String[]
  images      String[]
  available   Boolean   @default(true)
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime? 
}

model Booking {
  id           String        @id @default(cuid())
  renter       User          @relation(fields: [renterId], references: [id])
  renterId     String
  property     Property      @relation(fields: [propertyId], references: [id])
  propertyId   String
  checkInDate  DateTime
  checkoutDate DateTime
  status       BookingStatus
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Agent {
  id           String @id @default(cuid())
  name         String
  profileImage String
  role         String
  phoneNumber  String
  likedBy      String
  comment      String
  about        String
}




enum Role {
  RENTER
  HOST
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELED
}
